<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/badge1"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/badge2"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_below="@+id/username"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/badge1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/badge3"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_below="@+id/username"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/badge2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/badge4"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_below="@+id/username"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/badge3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/badge6"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_below="@+id/username"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/badge5"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/proPic"
        android:layout_width="92dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proPic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:text="username" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="79dp"
        android:layout_toEndOf="@+id/proPic"
        android:text="this is a general description uses may provide of themselves" />

    <ImageView
        android:id="@+id/badge5"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_below="@+id/username"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/badge4"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>